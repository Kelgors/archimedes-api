{
  "name": "api",
  "version": "1.0.0",
  "description": "API to save bookmarks (links) in list, tagged and shareable",
  "main": "dist/src/index.js",
  "scripts": {
    "start": "node dist/index.ts",
    "start:dev": "nodemon",
    "build": "tsc",
    "lint": "eslint src",
    "db:migration:generate": "typeorm-ts-node-commonjs migration:generate -d src/db.ts",
    "db:migration:run": "typeorm-ts-node-commonjs migration:run -d src/db.ts",
    "db:migration:revert": "typeorm-ts-node-commonjs migration:revert -d src/db.ts",
    "db:seed": "ts-node db/seed.ts",
    "db:reset:dev": "dotenv -e .env.development -- npm run db:seed",
    "db:reset:test": "dotenv -e .env.test -- npm run db:seed",
    "test": "npm run db:reset:test && jest --testPathIgnorePatterns=dist/ --coverage",
    "build:test": "npm run db:reset:test && jest --testPathPattern=dist/tests/ --coverage"
  },
  "author": {
    "name": "Matthieu BOHEAS",
    "url": "https://www.kelgors.me"
  },
  "license": "ISC",
  "devDependencies": {
    "@jest/globals": "^29.7.0",
    "@types/jest": "^29.5.6",
    "@types/lodash": "^4.14.200",
    "@types/node": "^20.8.9",
    "@types/supertest": "^2.0.15",
    "@typescript-eslint/eslint-plugin": "^6.9.1",
    "@typescript-eslint/parser": "^6.9.1",
    "eslint": "^8.52.0",
    "eslint-config-prettier": "^9.0.0",
    "eslint-plugin-prettier": "^5.0.1",
    "nodemon": "^3.0.1",
    "prettier": "^3.0.3",
    "supertest": "^6.3.3",
    "ts-jest": "^29.1.1",
    "ts-node": "^10.9.1",
    "typescript": "^5.2.2"
  },
  "dependencies": {
    "@fastify/jwt": "^7.2.2",
    "argon2": "^0.31.1",
    "dotenv": "^16.3.1",
    "dotenv-cli": "^7.3.0",
    "express-jwt": "^8.4.1",
    "fast-jwt": "^3.3.1",
    "fastify": "^4.24.3",
    "fastify-plugin": "^4.5.1",
    "fastify-type-provider-zod": "^1.1.9",
    "lodash": "^4.17.21",
    "mysql2": "^3.6.3",
    "pg": "^8.11.3",
    "pino-pretty": "^10.2.3",
    "reflect-metadata": "^0.1.13",
    "slugify": "^1.6.6",
    "sqlite3": "^5.1.6",
    "typeorm": "^0.3.17",
    "uuid": "^9.0.1",
    "zod": "^3.22.4"
  }
}
